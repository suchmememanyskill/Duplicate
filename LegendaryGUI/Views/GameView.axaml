<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
			 xmlns:views="clr-namespace:LegendaryGUI.Views"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="LegendaryGUI.Views.GameView">
	<DockPanel>
		<StackPanel DockPanel.Dock="Top" Orientation="Horizontal" Background="White">
			<Button Margin="5">Add an item</Button>
			<Button Margin="5">Add an item</Button>
			<Button Margin="5" DockPanel.Dock="Right">Add an item</Button>
			<Button Margin="5" DockPanel.Dock="Right">Add an item</Button>
		</StackPanel>
		<ScrollViewer Background="Black">
			<ItemsControl Items="{Binding Items}">
				<ItemsControl.ItemTemplate>
					<DataTemplate>
						<views:GameItem/>
					</DataTemplate>
				</ItemsControl.ItemTemplate>
			</ItemsControl>


		</ScrollViewer>

	</DockPanel>
</UserControl>
